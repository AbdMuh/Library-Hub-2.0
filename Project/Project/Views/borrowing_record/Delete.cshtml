@model Project.Models.borrowing_record

@{
    ViewBag.Title = "Delete Borrowing Record";
}

<div class="max-w-4xl mx-auto bg-gradient-to-br from-gray-800 to-gray-900 text-gray-200 px-6 py-8 rounded-xl shadow-lg">
    <div class="mb-6">
        <a href="@Url.Action("Index")"
           class="bg-blue-600 hover:bg-gray-200 hover:text-blue-600 text-gray-200 font-bold py-3 px-4 rounded shadow transition duration-200">
            ← Back to List
        </a>
    </div>

    <h2 class="text-3xl font-bold text-center mb-6">Delete Borrowing Record</h2>

    <h3 class="text-xl text-center mb-6">Are you sure you want to delete this borrowing record?</h3>

    <div class="mb-6">
        <h4 class="text-2xl font-semibold">Borrowing Record Details</h4>
        <hr class="border-gray-600 my-4" />

        <dl class="space-y-4">
            <div class="flex justify-between">
                <dt class="font-medium">Borrow Timestamp</dt>
                <dd>@Html.DisplayFor(model => model.borrow_timestamp)</dd>
            </div>

            <div class="flex justify-between">
                <dt class="font-medium">Due Timestamp</dt>
                <dd>@Html.DisplayFor(model => model.due_timestamp)</dd>
            </div>

            <div class="flex justify-between">
                <dt class="font-medium">Return Timestamp</dt>
                <dd>@Html.DisplayFor(model => model.return_timestamp)</dd>
            </div>

            <div class="flex justify-between">
                <dt class="font-medium">Status</dt>
                <dd>@Html.DisplayFor(model => model.status)</dd>
            </div>

            <div class="flex justify-between">
                <dt class="font-medium">Book Title</dt>
                <dd>@Html.DisplayFor(model => model.book.title)</dd>
            </div>

            <div class="flex justify-between">
                <dt class="font-medium">User Name</dt>
                <dd>@Html.DisplayFor(model => model.user.user_name)</dd>
            </div>
        </dl>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="mt-6 text-center">
            <input type="submit" value="Delete" class="w-full py-3 text-lg bg-red-600 font-semibold rounded hover:bg-gray-200 hover:text-red-600 text-gray-200 transition duration-200" />
        </div>
    }
</div>
