@model Project.Models.book

@{
    ViewBag.Title = "Create";
}

<div class="max-w-5xl mx-auto bg-gradient-to-br from-gray-800 to-gray-900 text-gray-200 px-6 py-8 rounded-xl shadow-lg">
    <!-- Back to List Link -->
    <div class="mb-6">
        <a href="@Url.Action("Index")"
           class="bg-blue-600 hover:bg-gray-200 hover:text-blue-600 text-gray-200 font-bold py-2 px-4 rounded shadow transition duration-200">
            ← Back to List
        </a>
    </div>

    <h2 class="text-3xl font-bold mb-6 text-center">Create New Book</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-red-500 mb-4" })

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- ISBN -->
            <div>
                @Html.LabelFor(model => model.ISBN, htmlAttributes: new { @class = "text-lg font-medium" })
                @Html.EditorFor(model => model.ISBN, new { htmlAttributes = new { @class = "form-control mt-2 p-3 rounded-md border-none bg-gray-700 text-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-gray-600" } })
                @Html.ValidationMessageFor(model => model.ISBN, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <!-- Title -->
            <div>
                @Html.LabelFor(model => model.title, "Title", htmlAttributes: new { @class = "text-lg font-medium" })
                @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control mt-2 p-3 rounded-md border-none bg-gray-700 text-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-gray-600" } })
                @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <!-- Author -->
            <div>
                @Html.LabelFor(model => model.author_id, "Author", htmlAttributes: new { @class = "text-lg font-medium" })
                @Html.DropDownList("author_id", null, htmlAttributes: new { @class = "form-control mt-2 p-3 rounded-md border-none bg-gray-700 text-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-gray-600" })
                @Html.ValidationMessageFor(model => model.author_id, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <!-- Publisher -->
            <div>
                @Html.LabelFor(model => model.publisher_id, "Publisher", htmlAttributes: new { @class = "text-lg font-medium" })
                @Html.DropDownList("publisher_id", null, htmlAttributes: new { @class = "form-control mt-2 p-3 rounded-md border-none bg-gray-700 text-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-gray-600" })
                @Html.ValidationMessageFor(model => model.publisher_id, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <!-- Genre -->
            <div>
                @Html.LabelFor(model => model.genre_name, "Genre", htmlAttributes: new { @class = "text-lg font-medium" })
                @Html.DropDownList("genre_name", null, htmlAttributes: new { @class = "form-control mt-2 p-3 rounded-md border-none bg-gray-700 text-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-gray-600" })
                @Html.ValidationMessageFor(model => model.genre_name, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <!-- Total Copies -->
            <div>
                @Html.LabelFor(model => model.totalCopies, "Total Copies", htmlAttributes: new { @class = "text-lg font-medium" })
                @Html.EditorFor(model => model.totalCopies, new { htmlAttributes = new { @class = "form-control mt-2 p-3 rounded-md border-none bg-gray-700 text-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-gray-600", min = "1" } })
                @Html.ValidationMessageFor(model => model.totalCopies, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <!-- Borrowed Copies -->
            <div>
                @Html.LabelFor(model => model.borrowedCopies, "Borrowed Copies", htmlAttributes: new { @class = "text-lg font-medium" })
                @Html.EditorFor(model => model.borrowedCopies, new { htmlAttributes = new { @class = "form-control mt-2 p-3 rounded-md border-none bg-gray-700 text-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-gray-600", min = "0" } })
                @Html.ValidationMessageFor(model => model.borrowedCopies, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <!-- Publication Year -->
            <div>
                @Html.LabelFor(model => model.publication_year, "Publication Year", htmlAttributes: new { @class = "text-lg font-medium" })
                @Html.EditorFor(model => model.publication_year, new { htmlAttributes = new { @class = "form-control mt-2 p-3 rounded-md border-none bg-gray-700 text-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-gray-600", min = "1" } })
                @Html.ValidationMessageFor(model => model.publication_year, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>
        </div>

        <div class="text-center mt-8">
            <input type="submit" value="Create" class="w-full py-3 text-lg font-semibold rounded bg-blue-600 hover:bg-gray-200 hover:text-blue-600 text-gray-200 transition duration-200" />
        </div>
    }
</div>
