@model Project.Models.book

@{
    ViewBag.Title = "Delete Book";
}

<div class="max-w-4xl mx-auto bg-gradient-to-br from-gray-800 to-gray-900 text-gray-200 px-6 py-8 rounded-xl shadow-lg">
    <div class="mb-6">
        <a href="@Url.Action("Index")"
           class="bg-blue-600 hover:bg-gray-200 hover:text-blue-600 text-gray-200 font-bold py-2 px-4 rounded shadow transition duration-200">
            ← Back to List
        </a>
    </div>
    <h2 class="text-3xl font-bold text-center mb-6">Delete Book</h2>

    <h3 class="text-xl text-center mb-6">Are you sure you want to delete this book?</h3>

    <div class="mb-6">
        <h4 class="text-2xl font-semibold">Book Details</h4>
        <hr class="border-gray-600 my-4" />

        <dl class="space-y-4">
            <div class="flex justify-between">
                <dt class="font-medium">Book Title</dt>
                <dd>@Html.DisplayFor(model => model.title)</dd>
            </div>

            <div class="flex justify-between">
                <dt class="font-medium">Total Copies</dt>
                <dd>@Html.DisplayFor(model => model.totalCopies)</dd>
            </div>

            <div class="flex justify-between">
                <dt class="font-medium">Borrowed Copies</dt>
                <dd>@Html.DisplayFor(model => model.borrowedCopies)</dd>
            </div>

            <div class="flex justify-between">
                <dt class="font-medium">Available Copies</dt>
                <dd>@Html.DisplayFor(model => model.avlCopies)</dd>
            </div>

            <div class="flex justify-between">
                <dt class="font-medium">Publication Year</dt>
                <dd>@Html.DisplayFor(model => model.publication_year)</dd>
            </div>

            <div class="flex justify-between">
                <dt class="font-medium">Author</dt>
                <dd>@Html.DisplayFor(model => model.author.name)</dd>
            </div>

            <div class="flex justify-between">
                <dt class="font-medium">Genre</dt>
                <dd>@Html.DisplayFor(model => model.genre.genre_description)</dd>
            </div>

            <div class="flex justify-between">
                <dt class="font-medium">Publisher</dt>
                <dd>@Html.DisplayFor(model => model.publisher.name)</dd>
            </div>
        </dl>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="mt-6 text-center">
            <input type="submit" value="Delete" class="w-full py-3 text-lg bg-red-600 font-semibold rounded hover:bg-gray-200 hover:text-red-600 text-gray-200 transition duration-200" />
        </div>
    }
</div>
