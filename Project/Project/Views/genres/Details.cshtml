@model Project.Models.genre

@{
    ViewBag.Title = "Genre Details";
}

<div class="max-w-2xl mx-auto bg-gradient-to-br from-gray-800 to-gray-900 text-gray-200 px-6 py-8 rounded-xl shadow-lg">
    <!-- Back to List Link -->
    <div class="mb-6">
        <a href="@Url.Action("Index")"
           class="bg-blue-600 hover:bg-gray-200 hover:text-blue-600 text-gray-200 font-bold py-3 px-4 rounded shadow transition duration-200">
            ← Back to List
        </a>
    </div>

    <h2 class="text-3xl font-bold mb-6 text-center">Genre Details</h2>

    <div class="space-y-4">
        <!-- Genre Name -->
        <div class="flex justify-between border-b border-gray-700 py-2">
            <span class="font-semibold">Genre Name:</span>
            <span>@Html.DisplayFor(model => model.genre_name)</span>
        </div>

        <!-- Genre Description -->
        <div class="flex justify-between border-b border-gray-700 py-2">
            <span class="font-semibold">Description:</span>
            <span>@Html.DisplayFor(model => model.genre_description)</span>
        </div>
    </div>

    <div class="mt-6 flex justify-center gap-6">
        @Html.ActionLink("Edit", "Edit", new { id = Model.genre_name }, new { @class = "bg-blue-600 hover:bg-gray-200 hover:text-blue-600 text-gray-200 font-bold py-3 px-4 rounded shadow transition duration-200" })
    </div>
</div>
