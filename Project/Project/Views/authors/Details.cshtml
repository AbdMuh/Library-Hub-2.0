@model Project.Models.author

@{
    ViewBag.Title = "Author Details";
}

<div class="max-w-4xl mx-auto bg-gradient-to-br from-gray-800 to-gray-900 text-gray-200 px-6 py-8 rounded-xl shadow-lg">
    <!-- Back to List Link -->
    <div class="mb-6">
        <a href="@Url.Action("Index")"
           class="bg-blue-600 hover:bg-gray-200 hover:text-blue-600 text-gray-200 font-bold py-3 px-4 rounded shadow transition duration-200">
            ← Back to List
        </a>
    </div>

    <h2 class="text-3xl font-bold mb-6 text-center">Author Details</h2>

    <div class="space-y-4">
        <!-- Author Name -->
        <div class="flex justify-between border-b border-gray-700 py-2">
            <span class="font-semibold">Name:</span>
            <span>@Html.DisplayFor(model => model.name)</span>
        </div>

        <!-- Author Biography -->
        <div class="flex justify-between border-b border-gray-700 py-2">
            <span class="font-semibold">Biography:</span>
            <span>@Html.DisplayFor(model => model.biography)</span>
        </div>

        <!-- Author Date of Birth -->
        <div class="flex justify-between border-b border-gray-700 py-2">
            <span class="font-semibold">Date of Birth:</span>
            <span>@Html.DisplayFor(model => model.date_of_birth)</span>
        </div>
    </div>

    <div class="mt-6 flex justify-center gap-6">
        @Html.ActionLink("Edit", "Edit", new { id = Model.author_id }, new { @class = "bg-blue-600 hover:bg-gray-200 hover:text-blue-600 text-gray-200 font-bold py-3 px-4 rounded shadow transition duration-200" })
    </div>
</div>
