@model Project.Models.author

@{
    ViewBag.Title = "Create";
}

<div class="max-w-5xl mx-auto bg-gradient-to-br from-gray-800 to-gray-900 text-gray-200 px-6 py-8 rounded-xl shadow-lg">
    <div class="mb-6">
        <a href="@Url.Action("Index")"
           class="bg-blue-600 hover:bg-gray-200 hover:text-blue-600 text-gray-200 font-bold py-2 px-4 rounded shadow transition duration-200">
            ← Back to List
        </a>
    </div>

    <h2 class="text-3xl font-bold mb-6 text-center">Create New Author</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-red-400 mb-4" })

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Name -->
            <div>
                @Html.LabelFor(model => model.name, "Name", htmlAttributes: new { @class = "text-lg font-medium" })
                @Html.EditorFor(model => model.name, new
                {
                    htmlAttributes = new
                    {
                        @class = "form-control mt-2 w-full p-3 rounded-md border-none bg-gray-700 text-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-gray-600"
                    }
                })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <!-- Date of Birth -->
            <div>
                @Html.LabelFor(model => model.date_of_birth, "Date of Birth", htmlAttributes: new { @class = "text-lg font-medium" })
                @Html.EditorFor(model => model.date_of_birth, new
                {
                    htmlAttributes = new
                    {
                        @class = "form-control mt-2 w-full p-3 rounded-md border-none bg-gray-700 text-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-gray-600"
                    }
                })
                @Html.ValidationMessageFor(model => model.date_of_birth, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <!-- Biography (full-width row) -->
            <div class="md:col-span-2">
                @Html.LabelFor(model => model.biography, "Biography", htmlAttributes: new { @class = "text-lg font-medium" })
                @Html.TextAreaFor(model => model.biography, new
                {
                    @class = "form-control mt-2 w-full p-3 h-32 rounded-md border-none bg-gray-700 text-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-gray-600"
                })
                @Html.ValidationMessageFor(model => model.biography, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>
        </div>

        <div class="mt-8 text-center">
            <input type="submit" value="Create" class="w-full py-3 text-lg font-semibold rounded bg-blue-600 hover:bg-gray-200 hover:text-blue-600 text-gray-200 transition duration-200" />
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
