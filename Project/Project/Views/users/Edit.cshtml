@model Project.Models.user

@{
    ViewBag.Title = "Edit User";
}

<div class="max-w-4xl mx-auto bg-gradient-to-br from-gray-800 to-gray-900 text-gray-200 px-6 py-8 rounded-xl shadow-lg">
    <div class="mb-6">
        <a href="@Url.Action("Index")"
           class="bg-blue-600 hover:bg-gray-200 hover:text-blue-600 text-gray-200 font-bold py-2 px-4 rounded shadow transition duration-200">
            ← Back to List
        </a>
    </div>

    <h2 class="text-3xl font-bold mb-6 text-center">Edit User</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-red-400 mb-4" })
        @Html.HiddenFor(model => model.user_id)

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Username -->
            <div>
                @Html.LabelFor(model => model.user_name, "Username", htmlAttributes: new { @class = "text-lg font-medium" })
                @Html.EditorFor(model => model.user_name, new
                {
                    htmlAttributes = new
                    {
                        @class = "form-control mt-2 p-3 rounded-md border-none bg-gray-700 text-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-gray-600"
                    }
                })
                @Html.ValidationMessageFor(model => model.user_name, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <!-- Password -->
            <div>
                @Html.LabelFor(model => model.password, "Password", htmlAttributes: new { @class = "text-lg font-medium" })
                @Html.EditorFor(model => model.password, new
                {
                    htmlAttributes = new
                    {
                        @class = "form-control mt-2 p-3 rounded-md border-none bg-gray-700 text-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-gray-600"
                    }
                })
                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <!-- Email -->
            <div>
                @Html.LabelFor(model => model.email, "Email", htmlAttributes: new { @class = "text-lg font-medium" })
                @Html.EditorFor(model => model.email, new
                {
                    htmlAttributes = new
                    {
                        @class = "form-control mt-2 p-3 rounded-md border-none bg-gray-700 text-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-gray-600"
                    }
                })
                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <!-- Role -->
            <div>
                @Html.LabelFor(model => model.role_id, "Role", htmlAttributes: new { @class = "text-lg font-medium" })
                @Html.DropDownList("role_id", null, htmlAttributes: new
                {
                    @class = "form-control mt-2 p-3 rounded-md border-none bg-gray-700 text-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-gray-600"
                })
                @Html.ValidationMessageFor(model => model.role_id, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <!-- Registration Timestamp -->
            <div>
                @Html.LabelFor(model => model.registration_timestamp, "Registered At", htmlAttributes: new { @class = "text-lg font-medium" })
                @Html.EditorFor(model => model.registration_timestamp, new
                {
                    htmlAttributes = new
                    {
                        @class = "form-control mt-2 p-3 rounded-md border-none bg-gray-700 text-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-gray-600"
                    }
                })
                @Html.ValidationMessageFor(model => model.registration_timestamp, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <!-- Last Login Timestamp -->
            <div>
                @Html.LabelFor(model => model.last_login_timestamp, "Last Login", htmlAttributes: new { @class = "text-lg font-medium" })
                @Html.EditorFor(model => model.last_login_timestamp, new
                {
                    htmlAttributes = new
                    {
                        @class = "form-control mt-2 p-3 rounded-md border-none bg-gray-700 text-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-gray-600"
                    }
                })
                @Html.ValidationMessageFor(model => model.last_login_timestamp, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>
        </div>

        <div class="mt-8 text-center">
            <input type="submit" value="Save" class="w-full py-3 text-lg font-semibold rounded bg-blue-600 hover:bg-gray-200 hover:text-blue-600 text-gray-200 transition duration-200" />
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
