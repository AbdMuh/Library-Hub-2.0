@model Project.Models.user

@{
    ViewBag.Title = "Details";
}

<div class="max-w-4xl mx-auto bg-gradient-to-br from-gray-800 to-gray-900 text-gray-200 px-6 py-8 rounded-xl shadow-lg">
    <!-- Back to List Link -->
    <div class="mb-6">
        <a href="@Url.Action("Index")"
           class="bg-blue-600 hover:bg-gray-200 hover:text-blue-600 text-gray-200 font-bold py-3 px-4 rounded shadow transition duration-200">
            ← Back to List
        </a>
    </div>

    <h2 class="text-3xl font-bold mb-6 text-center">User Details</h2>

    <div class="space-y-4">
        <!-- Username -->
        <div class="flex justify-between border-b border-gray-700 py-2">
            <span class="font-semibold">Username:</span>
            <span>@Html.DisplayFor(model => model.user_name)</span>
        </div>

        <!-- Email -->
        <div class="flex justify-between border-b border-gray-700 py-2">
            <span class="font-semibold">Email:</span>
            <span>@Html.DisplayFor(model => model.email)</span>
        </div>

        <!-- Registration Timestamp -->
        <div class="flex justify-between border-b border-gray-700 py-2">
            <span class="font-semibold">Registered On:</span>
            <span>@Html.DisplayFor(model => model.registration_timestamp)</span>
        </div>

        <!-- Last Login -->
        <div class="flex justify-between border-b border-gray-700 py-2">
            <span class="font-semibold">Last Login:</span>
            <span>@Html.DisplayFor(model => model.last_login_timestamp)</span>
        </div>

        <!-- Role -->
        <div class="flex justify-between border-b border-gray-700 py-2">
            <span class="font-semibold">Role:</span>
            <span>@Html.DisplayFor(model => model.role.role_name)</span>
        </div>
    </div>

    <div class="mt-6 flex justify-center gap-6">
        @Html.ActionLink("Edit", "Edit", new { id = Model.user_id }, new { @class = "bg-blue-600 hover:bg-gray-200 hover:text-blue-600 text-gray-200 font-bold py-3 px-4 rounded shadow transition duration-200" })
    </div>
</div>
