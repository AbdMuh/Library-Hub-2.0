@model IEnumerable<Project.Controllers.BookReviewListViewModel>
@{
    ViewBag.Title = "All Reviews";
}
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.15/dist/tailwind.min.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<div class="w-full mx-auto bg-gradient-to-br from-gray-800 to-gray-900 text-gray-200 px-4 py-8 rounded-xl shadow-lg">
    <h2 class="text-3xl font-bold mb-6 text-center">Book Reviews</h2>

    <div class="flex justify-start mb-4">
        <a href="@Url.Action("Create", "BookReviews")" class="bg-blue-600 hover:bg-gray-200 hover:text-blue-600 text-gray-200 font-bold py-3 px-4 rounded shadow transition duration-200">
            Write a Review
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="bg-green-600 text-green-200 p-3 mb-4 rounded">
            @TempData["Success"]
        </div>
    }

    <table class="min-w-full rounded-xl shadow-md overflow-hidden bg-gradient-to-br from-gray-800 to-gray-900 text-gray-200">
        <thead class="bg-gray-700">
            
            <tr>
                <th class="px-4 py-3 text-left">Book</th>
                <th class="px-4 py-3 text-left">User</th>
                <th class="px-4 py-3 text-center">Rating</th>
                <th class="px-4 py-3">Comment</th>
                <th class="px-4 py-3">Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr class="border-t border-gray-600">
                    <td class="px-4 py-3">@r.BookTitle</td>
                    <td class="px-4 py-3">@r.UserName</td>
                    <td class="px-4 py-3 text-center">@r.Rating</td>
                    <td class="px-4 py-3">@r.Comment</td>
                    <td class="px-4 py-3">@r.ReviewTimestamp.ToString("yyyy-MM-dd HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    body {
        font-family: 'Poppins', sans-serif;
    }

    .table th, .table td {
        color: #e5e7eb;
    }

    .table th {
        background-color: #1f2937;
    }

    .table td {
        background-color: #374151;
    }

    .bg-green-600 {
        background-color: #16a34a;
    }

    .text-gray-200 {
        color: #e5e7eb;
    }

    .bg-gray-800 {
        background-color: #1f2937;
    }

    .bg-gray-700 {
        background-color: #374151;
    }

    .bg-blue-600 {
        background-color: #3b82f6;
    }

    .bg-blue-700 {
        background-color: #2563eb;
    }
</style>
