@{
    ViewBag.Title = "Write Review";
}
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.15/dist/tailwind.min.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<div class="max-w-2xl mx-auto mt-10 bg-gradient-to-br from-gray-800 to-gray-900 text-gray-200 px-4 py-8 rounded-lg shadow-lg">
    <div class="mb-6">
        <a href="@Url.Action("Index")"
           class="bg-blue-600 hover:bg-gray-200 hover:text-blue-600 text-gray-200 font-bold py-2 px-4 rounded shadow transition duration-200">
            ← Back to List
        </a>
    </div>
    <h2 class="text-3xl font-bold mb-6 text-center">Write a Review</h2>

    @using (Html.BeginForm("Create", "BookReviews", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label class="block text-sm font-medium mb-1">Book</label>
                @Html.DropDownList("ISBN", (SelectList)ViewBag.ISBN, "Select a Book", new { @class = "w-full mx-auto bg-gray-700 text-gray-200 rounded-xl p-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-200" })
            </div>

            <div>
                <label class="block text-sm font-medium mb-1">Rating</label>
                <select name="rating" class="w-full bg-gray-700 text-gray-200 rounded-xl p-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-200">
                    <option value="">Select Rating</option>
                    @for (int i = 1; i <= 5; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
            </div>

            <div>
                <label class="block text-sm font-medium mb-1">Comment</label>
                <textarea name="comment" class="w-full bg-gray-700 text-gray-200 rounded-xl p-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-gray-600 transition duration-200" rows="4" placeholder="Your thoughts..."></textarea>
            </div>


        </div>
        <div class="mt-6">
            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-4 rounded-lg transition duration-200">
                Submit Review
            </button>
        </div>
    }
</div>

<style>
    body {
        font-family: 'Poppins', sans-serif;
    }

    .bg-blue-600 {
        background-color: #3b82f6;
    }

    .bg-blue-700 {
        background-color: #2563eb;
    }

    .bg-gray-800 {
        background-color: #1f2937;
    }

    .bg-gray-700 {
        background-color: #374151;
    }

    .text-gray-200 {
        color: #e5e7eb;
    }

    .focus\:ring-blue-500 {
        box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.5)
    }
</style>