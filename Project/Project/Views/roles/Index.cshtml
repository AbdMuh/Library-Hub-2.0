@model IEnumerable<Project.Models.role>

@{
    ViewBag.Title = "Roles List";
}

<!-- Tailwind & Poppins -->
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.15/dist/tailwind.min.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

<div class="px-4 py-10 text-white rounded-xl bg-gradient-to-br from-gray-800 to-gray-900" style="font-family: 'Poppins', sans-serif;">
    <h2 class="text-3xl font-bold mb-6 text-center text-gray-200">Roles</h2>

    <div class="overflow-x-auto">
        <table class="min-w-full rounded-xl shadow-md overflow-hidden bg-gradient-to-br from-gray-800 to-gray-900 text-gray-200">
            <thead class="bg-gray-700">
                <tr>
                    <th class="py-3 px-4 text-center">Role Name</th>
                    <th class="py-3 px-4 text-center">Description</th>
              
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-600">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-700 transition duration-150 text-center">
                        <td class="py-3 px-4">@item.role_name</td>
                        <td class="py-3 px-4">@item.description</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
