@model Project.Models.book_reviews

@{
    ViewBag.Title = "Review Details";
}

<div class="max-w-4xl mx-auto bg-gradient-to-br from-gray-800 to-gray-900 text-gray-200 px-6 py-8 rounded-xl shadow-lg">
    <!-- Back to List Link -->
    <div class="mb-6">
        <a href="@Url.Action("Index")"
           class="bg-blue-600 hover:bg-gray-200 hover:text-blue-600 text-gray-200 font-bold py-3 px-4 rounded shadow transition duration-200">
            ← Back to List
        </a>
    </div>

    <h2 class="text-3xl font-bold mb-6 text-center">Review Details</h2>

    <div class="space-y-4">
        <!-- Rating -->
        <div class="flex justify-between border-b border-gray-700 py-2">
            <span class="font-semibold">Rating:</span>
            <span>@Html.DisplayFor(model => model.rating)</span>
        </div>

        <!-- Comment -->
        <div class="flex justify-between border-b border-gray-700 py-2">
            <span class="font-semibold">Comment:</span>
            <span>@Html.DisplayFor(model => model.comment)</span>
        </div>

        <!-- Timestamp -->
        <div class="flex justify-between border-b border-gray-700 py-2">
            <span class="font-semibold">Review Date:</span>
            <span>@Html.DisplayFor(model => model.review_timestamp)</span>
        </div>

        <!-- Book Title -->
        <div class="flex justify-between border-b border-gray-700 py-2">
            <span class="font-semibold">Book:</span>
            <span>@Html.DisplayFor(model => model.book.title)</span>
        </div>

        <!-- Reviewer -->
        <div class="flex justify-between border-b border-gray-700 py-2">
            <span class="font-semibold">Reviewer:</span>
            <span>@Html.DisplayFor(model => model.user.user_name)</span>
        </div>
    </div>

    <div class="mt-6 flex justify-center gap-6">
        @Html.ActionLink("Edit", "Edit", new { id = Model.review_id }, new { @class = "bg-blue-600 hover:bg-gray-200 hover:text-blue-600 text-gray-200 font-bold py-3 px-4 rounded shadow transition duration-200" })
    </div>
</div>
