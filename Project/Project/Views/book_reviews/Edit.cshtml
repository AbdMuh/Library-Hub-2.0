@model Project.Models.book_reviews

@{
    ViewBag.Title = "Edit";
}

<div class="max-w-4xl mx-auto bg-gradient-to-br from-gray-800 to-gray-900 text-gray-200 px-6 py-8 rounded-xl shadow-lg">
    <div class="mb-6">
        <a href="@Url.Action("Index")"
           class="bg-blue-600 hover:bg-gray-200 hover:text-blue-600 text-gray-200 font-bold py-2 px-4 rounded shadow transition duration-200">
            ← Back to List
        </a>
    </div>

    <h2 class="text-3xl font-bold mb-6 text-center">Edit Book Review</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-red-400 mb-4" })
        @Html.HiddenFor(model => model.review_id)

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- ISBN -->
            <div>
                @Html.LabelFor(model => model.ISBN, "ISBN", htmlAttributes: new { @class = "text-lg font-medium" })
                @Html.DropDownList("ISBN", null, htmlAttributes: new
                {
                    @class = "form-control mt-2 p-3 rounded-md border-none bg-gray-700 text-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-gray-600"
                })
                @Html.ValidationMessageFor(model => model.ISBN, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <!-- User ID -->
            <div>
                @Html.LabelFor(model => model.user_id, "User", htmlAttributes: new { @class = "text-lg font-medium" })
                @Html.DropDownList("user_id", null, htmlAttributes: new
                {
                    @class = "form-control mt-2 p-3 rounded-md border-none bg-gray-700 text-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-gray-600"
                })
                @Html.ValidationMessageFor(model => model.user_id, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <!-- Rating -->
            <div>
                @Html.LabelFor(model => model.rating, "Rating", htmlAttributes: new { @class = "text-lg font-medium" })
                @Html.EditorFor(model => model.rating, new { htmlAttributes = new { @class = "form-control mt-2 p-3 rounded-md border-none bg-gray-700 text-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-gray-600" } })
                @Html.ValidationMessageFor(model => model.rating, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <!-- Comment -->
            <div>
                @Html.LabelFor(model => model.comment, "Comment", htmlAttributes: new { @class = "text-lg font-medium" })
                @Html.EditorFor(model => model.comment, new { htmlAttributes = new { @class = "form-control mt-2 p-3 rounded-md border-none bg-gray-700 text-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-gray-600" } })
                @Html.ValidationMessageFor(model => model.comment, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <!-- Review Timestamp -->
            <div>
                @Html.LabelFor(model => model.review_timestamp, "Review Date", htmlAttributes: new { @class = "text-lg font-medium" })
                @Html.EditorFor(model => model.review_timestamp, new { htmlAttributes = new { @class = "form-control mt-2 p-3 rounded-md border-none bg-gray-700 text-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-gray-600" } })
                @Html.ValidationMessageFor(model => model.review_timestamp, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>
        </div>

        <div class="mt-8 text-center">
            <input type="submit" value="Save" class="w-full py-3 text-lg font-semibold rounded bg-blue-600 hover:bg-gray-200 hover:text-blue-600 text-gray-200 transition duration-200" />
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
